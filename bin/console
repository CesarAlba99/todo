#!/usr/bin/env ruby

require_relative '../lib/todo'

json_storage = JsonStorage.new
todo = Todo.new json_storage

puts 'LIST TASKS: '
puts todo.list_tasks
puts ' '
puts 'FIND TASKS: '
puts ' '
puts todo.find_task('54470e73-2c2c-4d19-a2b1-f8ceaa88115f')
puts ''
puts 'DELETE TASK: '
puts todo.delete_task('54470e73-2c2c-4d19-a2b1-f8ceaa88115f')
puts 'ADD_TASK: '
puts todo.add_task('My first task', 'Description added')
puts 'EDIT TASK:'
puts todo.edit_task('7ba7847a-ef42-481f-b7e2-0022a61f31b6', title: 'my first task edited')
